<%= form_for hunt do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :start_time %>
    <%= f.datetime_field :start_time %><br />
    <%= f.label :finish_time %>
    <%= f.datetime_field :finish_time %>
  </p>
  <p>
    <%= f.fields_for :location_attributes, hunt.location do |l| %>
      <%= l.label :city %>
      <%= l.text_field :city %><br />
      <%= l.label :state %>
      <%= l.text_field :state %>
    <% end %>
  </p>

  <p>
    Items:
  </p>

  <ol>
    <%= f.fields_for :items do |i| %>
      <li>
        <%= i.text_field :name %>
        <% if i.object.name %>
          <%= i.check_box :_destroy %>Remove
        <% end %>
      </li>
    <% end %>
  </ol>


  <%= f.submit %>
<% end %>
