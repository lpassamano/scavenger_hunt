<!DOCTYPE html>
<html>
  <head>
    <title>ScavengerHunt</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav>
      <% if current_user %>
        <ul>
          <li>
            <%= link_to "Home", root_path %>
          </li>
          <li>
            <%= link_to "Browse Hunts", hunts_path %>
          </li>
          <li>
            <%= link_to "Add New Hunt", new_hunt_path %>
          </li>
          <li>
            <%= link_to current_user.name, user_profile_path(current_user) %> | <%= link_to("Sign Out", destroy_user_session_path, :method => :delete) %>
          </li>
        </ul>
      <% else %>
        <ul>
          <li>
            <%= link_to "Sign In", new_user_session_path %> or <%= link_to "Sign Up", new_user_registration_path %><br />
          </li>
        </ul>
      <% end %>
    </nav>

    <section>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>

      <%= yield %>
    </section>
  </body>
</html>
